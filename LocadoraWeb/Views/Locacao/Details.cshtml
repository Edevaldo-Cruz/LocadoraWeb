@model LocadoraWeb.Model.Locacao

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Locação</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class="col-sm-2">
            Filme
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Titulo)
        </dd>
        <dt class = "col-sm-2">
           Data de locação
           
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataLocacao)
        </dd>
        <dt class = "col-sm-2">
            Data de devolução
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataDevolucao)
        </dd>
        <dt class = "col-sm-2">
            Devolvido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Devolvido)
        </dd>
       
       
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.LocacaoId">Editar</a>
    <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
</div>


