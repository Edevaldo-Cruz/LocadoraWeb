@model LocadoraWeb.Model.Locacao

@{
    ViewData["Title"] = "Nova Locação";
    DateTime dataAtual = DateTime.Now;
}

<div class="row align-items-lg-center">
    <div class="col-lg-11 col-md-11 col-sm-11">
        <h1>Nova Locação</h1>
        <h4>Locação</h4>
    </div>
    <div class="col-lg-1 col-md-1 col-sm-1">
        <a asp-action="Index">Voltar</a>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="ClienteId" class="control-label">Cliente</label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                        <option>Selecione o cliente</option>
                    </select>
                </div>
                <div class="form-group col-4">
                    <label asp-for="FilmeId" class="control-label">Filme</label>
                    <select asp-for="FilmeId" class="form-control" asp-items="ViewBag.FilmeId">
                        <option>Selecione o filme</option>
                    </select>
                </div>
                <div class="form-group col-4">
                    <label asp-for="DataLocacao" class="control-label">Data de locação</label>
                    <input class="form-control" value="@dataAtual.ToString("dd/MM/yyyy")" readonly />
                    <span asp-validation-for="DataLocacao" class="text-danger"></span>
                </div>

            </div>
            <hr />
            <div class="form-group float-end">
                <input type="submit" value="Alugar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }
