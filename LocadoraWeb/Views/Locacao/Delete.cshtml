@model LocadoraWeb.Model.Locacao

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>
<h3>Tem certeza de que deseja excluir isso?</h3>
<div>
    <h4>Locação</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class = "col-sm-2">
            Filme
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Filme.Titulo)
        </dd>
        <dt class = "col-sm-2">
            Data de locação
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataLocacao)
        </dd>
        <dt class = "col-sm-2">
            Data de devolução
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataDevolucao)
        </dd>
        <dt class = "col-sm-2">
            Devolvido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Devolvido)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LocacaoId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
    </form>
</div>
