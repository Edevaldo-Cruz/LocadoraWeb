@model LocadoraWeb.Model.Locacao

@{
    ViewData["Title"] = "Editar";
}
<div class="row">
    <div class="col-11">
        <h1>Editar</h1>
        <h4>Locação</h4>
    </div>
    <div class="col-1">
        <a asp-action="Index">Voltar</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LocacaoId" />
            <div class="row">
                <div class="form-group col-3">
                    <label asp-for="Cliente.Nome" class="control-label"></label>
                    <select asp-for="Cliente.Nome" class="form-control" asp-items="ViewBag.ClienteId" disabled></select>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="Filme.Titulo" class="control-label"></label>
                    <select asp-for="Filme.Titulo" class="form-control" asp-items="ViewBag.FilmeId" disabled></select>
                    <span asp-validation-for="FilmeId" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="DataLocacao" class="control-label">Data de Locação</label>                  
                    <input asp-for="DataLocacao" type="date" class="form-control" />
                    <span asp-validation-for="DataLocacao" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="DataDevolucao" class="control-label">Data de Entrega</label>                   
                    <input asp-for="DataDevolucao" type="date" class="form-control" />
                    <span asp-validation-for="DataDevolucao" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-check" style="margin-top: 8px">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Devolvido" /> @Html.DisplayNameFor(model => model.Devolvido)
                </label>
            </div>
            <hr />
            <div class="form-group float-end">
                <input type="submit" value="Salvar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
